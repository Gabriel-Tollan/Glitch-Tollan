<main>
    <div class="main-container">
        <h1>Cart</h1>
        <div id="cart-id">{{user.cart}}</div>
        <h2>Products</h2>
        <div id="products-container">
            {{#each payload.products}}
                <div class="product-container">
                    <p class="product-titulo">{{product.titulo}}</p>
                    <p class="product-data">Precio: ${{product.precio}}</p>
                    <p class="product-data">Cantidad: {{cantidad}}</p>
                    <p class="product-data">Categoria: {{product.categoria}}</p>
                    <p class="product-descripcion">Descripcion: {{product.descripcion}}</p>
                </div>
            {{/each}}
        </div>
        <div class="controls">
            <a href="/products"><button>Seguir Comprando</button></a>
        </div>
    </div>
</main>